<h1 align= 'center'> Create a new Category</h1>

<div class='row'>
  <div class="col-xs-10">
    <%= form_for(@category, :html => {:class => "form-horizontal", role: "form" }) do |f| %>
      <div class='form-group'>
        <div class="control-label col-sm-2">
            <%= f.label :name%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :name, :class=> "form-control", :placeholder => "Category Name" , :autofocus => true%>
        </div>
      </div>
    
      </div>
      <div class='form-group'>
        <div class=" col-sm-offset-4 col-sm-8">
            <%= f.submit :class => "btn btn-primary btn-lg" %>
        </div>
      </div>

       <div class=" col-sm-offset-2 col-sm-10">
         [ <%= link_to "Back to Home", articles_path %> ]
      </div>

    <% end %>
  </div>
</div>