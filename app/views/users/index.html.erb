<h1 align= 'center'> All my List if Users </h1>

 <div align = 'center'>
    <%= will_paginate @All_users,  :renderer => BootstrapPagination::Rails%>
     <% @All_users.each do |userList| %>
      <ul class= 'listing'>
        <div class= "row" >
          <div class= "well col-md-4 col-md-offset-4">
            <li><%= link_to gravator_for(userList, :size => 100), user_path(userList) %></li>
            <li class= 'article-title'><%= link_to userList.username, user_path(userList) %> </li>
            <li><small><%= pluralize(userList.articles.count, 'article') if userList.articles %> </small></li>
            <% if logged_in? && current_user.admin? %>
                <li><%= link_to "Delete this User", user_path(userList), method: :delete, data: {confirm: 'Are you sure buddy delete the User and all its articles'} %></li>
            <% end %>
          </div>
        </div>
      </ul>
      <% end %>
    </div>